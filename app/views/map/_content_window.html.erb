<%= image_tag("shop/1.jpg", class: "small-image") %>
<%= form_with(model: @shopreview, url: shopreview_path, method: :post) do |form| %>
  <%= form.text_area :comment, class: "w-full p-2 border border-gray-300 rounded-md", rows: 5 %>
  <%= form.submit "送信", class: "bg-blue-500 text-white font-bold py-2 px-4 rounded" %>
<% end %>