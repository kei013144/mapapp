<header class="bg-blue-600 text-white opacity-90">
    <div class="container mx-auto px-4 grid grid-cols-2 items-center">
    <% if logged_in? %>
    <%= link_to "Mapapp", map_path, class: "text-3xl font-bold" %>
    <% else %>
    <h1 class="text-3xl font-bold">Mapapp</h1>
    <% end %>
    <nav class="md:flex justify-end space-x-4">
      <% if logged_in? %>
        <%= link_to "ログアウト", logout_path, data: {
              turbo_method: "delete",
              turbo_confirm: "ログアウトしますか？"
            } %>
      <% else %>
        <%= link_to "ログイン", login_path %>
        <%= link_to "新規登録", signup_path %>
      <% end %>
    </nav>
    </div>
</header>
